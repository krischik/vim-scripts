function SSH_Add_Key ()
{
    local in_Key="${1}"
    local Fingerprint=$(ssh-keygen -lf ~/.ssh/${in_Key}  | awk '{print $2}')

    if ! ssh-add -l | ggrep -q ${Fingerprint}; then
        ssh-add ~/.ssh/${in_Key}
    fi

    return
}

############################################################ {{{1 ###########
